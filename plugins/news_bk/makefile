# Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.


# Where to find user code.
# c++ access hbase dependence
THRIFT_INC=/usr/local/thrift/include/ 
THRIFT_DIR=/usr/local/thrift/include/thrift/
THRIFT_LIB_DIR=/usr/local/thrift/lib/
BOOST_DIR=/usr/local/boost/include/
GEN_DIR=/usr/local/hbase/gen-cpp/
GEN_SRC = /usr/local/hbase/gen-cpp/Hbase.cpp \
					/usr/local/hbase/gen-cpp/Hbase_types.cpp \
			    /usr/local/hbase/gen-cpp/Hbase_constants.cpp

KAFKA_DIR = ./../../../library/base/kafka/
KAFKALIB_DIR=./../../../library/third_party/librdkafka/

LIB_DIR = ./../../../library
USER_DIR = ./../../pub
SO_DIR = ./../../bin/plugins
STOCKSVC = ./../../plugins
ARITHMETIC = $(USER_DIR)/arithmetic

THIRD_PATH = $(LIB_DIR)/public

CUSTOM_THIRD_PATH = $(LIB_DIR)/third_party

LINK_PATHS = -L./ -L/usr/local/libmemcached-1.0.7/lib/  -L/usr/lib64 -L/usr/lib64/mysql -L${THRIFT_LIB_DIR}

# Flags passed to the preprocessor.
CPPFLAGS += -isystem -shared -fPIC -D_DB_POOL_ -D_DEBUG -DUSR_LOG_MSG -DPROCESS_WORK

# Flags passed to the C++ compiler.
CXXFLAGS += -g  -Wextra -pthread -shared -fPIC

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
PLUGIN = $(SO_DIR)/news/news.so
                
INCLUDE_PATHS = -I/usr/local/libmemcached-1.0.7/include \
				-I/usr/local/libmemcached/include\
				-I/usr/local/freetds/include\
				-I$(LIB_DIR)\
				-I$(THIRD_PATH)\
				-I/usr/local/include\
				-I/usr/include/mysql\
				-I$(USER_DIR)\
				-I$(CUSTOM_THIRD_PATH)/hiredis\
				-I$(CUSTOM_THIRD_PATH)\
				-I$(LIB_DIR)/base\
				-I$(BASE_DIR)\
				-I$(LIB_DIR)/public\
				-I$(STOCKSVC)\
				-I$(LIB_DIR)/third_party/hiredis\
				-I$(LIB_DIR)/third_party\
				-I$(ARITHMETIC) \
				-I${THRIFT_INC} \
				-I${THRIFT_DIR} \
				-I${BOOST_DIR} \
				-I${GEN_DIR} \
				-I${KAFKA_DIR} \
				-I${KAFKALIB_DIR}/src
				
# House-keeping build targets.

ALL_HEADERS = $(USER_HEADERS)
all : $(PLUGIN) delete-temp-file

clean :
	rm -f $(PLUGIN)  *.o

delete-temp-file:
	-rm -f ./*.o
	
news_init.o : ./news_init.cc ./news_init.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./news_init.cc $(INCLUDE_PATHS) 

news_logic.o : ./news_logic.cc ./news_logic.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./news_logic.cc $(INCLUDE_PATHS)
	
db_redis.o : ./db_redis.cc ./db_redis.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./db_redis.cc $(INCLUDE_PATHS)
	
db_mysql.o : ./db_mysql.cc ./db_mysql.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./db_mysql.cc $(INCLUDE_PATHS)
	
mem_manager.o : ./mem_manager.cc ./mem_manager.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./mem_manager.cc $(INCLUDE_PATHS)
	
news_packet.o : ./news_packet.cc ./news_packet.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./news_packet.cc $(INCLUDE_PATHS)

db_hbase.o : ./db_hbase.cc ./db_hbase.h
	  $(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./db_hbase.cc ${GEN_SRC} $(INCLUDE_PATHS)

Hbase.o:${GEN_DIR}/Hbase.cpp ${GEN_DIR}/Hbase.h                                                                          
	g++ -c -I${BOOST_DIR} -I${THRIFT_INC} -I${THRIFT_DIR} -I${GEN_DIR} -L${LIB_DIR} -lthrift ${GEN_DIR}/Hbase.cpp

Hbase_constants.o:${GEN_DIR}/Hbase_constants.cpp ${GEN_DIR}/Hbase_constants.h
	g++ -c -I${BOOST_DIR} -I${THRIFT_INC} -I${THRIFT_DIR} -I${GEN_DIR} -L${LIB_DIR} -lthrift ${GEN_DIR}/Hbase_constants.cpp 

Hbase_types.o:${GEN_DIR}/Hbase_types.cpp ${GEN_DIR}/Hbase_types.h
	g++ -c -I${BOOST_DIR} -I${THRIFT_INC} -I${THRIFT_DIR} -I${GEN_DIR} -L${LIB_DIR} -lthrift ${GEN_DIR}/Hbase_types.cpp

#kafka
kafka_producer.o : $(KAFKA_DIR)/kafka_producer.cc $(KAFKA_DIR)/kafka_producer.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(KAFKA_DIR)/kafka_producer.cc $(INCLUDE_PATHS)

kafka_accessor.o : ./kafka_accessor.cc ./kafka_accessor.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./kafka_accessor.cc $(INCLUDE_PATHS)

http_data.o : $(USER_DIR)/net/http_data.cc $(USER_DIR)/net/http_data.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/net/http_data.cc $(INCLUDE_PATHS)
	
tools.o : $(USER_DIR)/tools/tools.cc $(USER_DIR)/tools/tools.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/tools/tools.cc $(INCLUDE_PATHS)
	
tea.o:$(ARITHMETIC)/tea/tea.cc $(ARITHMETIC)/tea/tea.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(ARITHMETIC)/tea/tea.cc $(INCLUDE_PATHS)

error_comm.o :  $(USER_DIR)/net/error_comm.cc $(USER_DIR)/net/error_comm.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/net/error_comm.cc $(INCLUDE_PATHS)
	
logic_basic_info.o :  $(USER_DIR)/logic/logic_basic_info.cc $(USER_DIR)/logic/logic_basic_info.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/logic/logic_basic_info.cc $(INCLUDE_PATHS)

logic_unit.o :  $(USER_DIR)/logic/logic_unit.cc $(USER_DIR)/logic/logic_unit.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)/logic/logic_unit.cc $(INCLUDE_PATHS)
	
http_packet.o: $(THIRD_PATH)/protocol/http_packet.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/protocol/http_packet.cc $(INCLUDE_PATHS)
	
mig_log.o: $(THIRD_PATH)/log/mig_log.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/log/mig_log.cc $(INCLUDE_PATHS)
	
basictypes.o: $(THIRD_PATH)/basic/basictypes.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/basictypes.cc $(INCLUDE_PATHS)
	
basic_util.o: $(THIRD_PATH)/basic/basic_util.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/basic_util.cc $(INCLUDE_PATHS)
	
config.o: $(THIRD_PATH)/config/config.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/config/config.cc $(INCLUDE_PATHS)
	
md5sum.o:$(THIRD_PATH)/basic/md5sum.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/md5sum.cc $(INCLUDE_PATHS)

radom_in.o:$(THIRD_PATH)/basic/radom_in.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/radom_in.cc $(INCLUDE_PATHS)

redis_warrper.o:$(THIRD_PATH)/storage/redis_warrper.c
	gcc $(CPPFLAGS) $(CXXFLAGS) -std=c99 -pedantic -c $(INCLUDE_PATHS) -O3 -fPIC  -Wall -W -Wstrict-prototypes -Wwrite-strings -g -ggdb  $(THIRD_PATH)/storage/redis_warrper.c $(INCLUDE_PATHS)

$(PLUGIN) : news_init.o news_logic.o db_redis.o db_mysql.o mem_manager.o \
	db_hbase.o Hbase.o Hbase_constants.o Hbase_types.o kafka_producer.o kafka_accessor.o \
	news_packet.o http_data.o http_packet.o mig_log.o basictypes.o error_comm.o tools.o \
	logic_basic_info.o logic_unit.o basic_util.o config.o tools.o tea.o \
	md5sum.o radom_in.o redis_warrper.o \
	$(CUSTOM_THIRD_PATH)/dmg_fp/lib/dmg_fp.a $(LIB_DIR)/base/lib/mybase.a $(LIB_DIR)/third_party/hiredis/libhiredis.a ${KAFKALIB_DIR}/librdkafka.a 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LINK_PATHS) -lpthread -lexpat -lrt -lpthread -ldl -liconv -lmysqlclient -lcurl -lthrift \
	$^ -o $@
